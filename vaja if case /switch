#include <stdio.h>

int main(void) {
int x = 5;
    
    if (x == 1) {
    printf("ocena negativno \n");
    }
    else if (x == 2) {
    printf("ocena zadostno \n");
    }
    else if (x == 3) {
        printf("ocena dobro \n");
    }
    else if (x == 4) {
        printf("ocena zelo dobro \n");
    }
    else if (x == 5) {
        printf("ocena odlično \n");
    }
}

2 .................................................

#include <stdio.h>

int main(void) {
  int x = 4;
  switch(x){
    case 1: printf ("ocena: negativno \n");
    break;
    case 2: printf ("ocena: zadostno \n");
    break;
    case 3: printf ("ocena: dobro \n");
    break;
    case 4: printf ("ocena: prav dobro \n");
    break;
    case 5: printf ("ocena: odlično \n");
    break;
}
}
